<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjp.dao.AcademyDao">
	<select id="findList" parameterType="Map" resultType="Academy">
		select * from academy where name like #{name} limit #{offset}, #{pageSize}
	</select>

	<select id="getTotal" parameterType="Map" resultType="Integer">
		select count(id) from academy where name like #{name}
	</select>

	<update id="add" parameterType="Academy">
		insert into academy(name) values(#{name})
	</update>

	<update id="edit" parameterType="Academy">
		update academy set name = #{name} where id = #{id}
	</update>

	<update id="delete" parameterType="String">
		delete from academy where id in (${value})
	</update>

	<select id="findAll" resultType="Academy">
		select * from academy
	</select>
</mapper>